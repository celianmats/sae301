{% extends 'base.html.twig' %}

{% block title %}Travaux{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
{% endblock %}

{% block body %}
<header>
    <nav>
        <div class="navbar">
            <div class="logo"><a href="{{ path('app_default') }}"><img class="logo" src="{{ asset('images/logo.png') }}" alt="logo"></a></div>
            <ul class="links">
                <li class="li"> <a href="{{ path('app_default') }}">Accueil</a></li>
                <li class="li"><a href="{{ path('app_calendar') }}">Calendrier</a></li>
                <li class="li"> <a href="{{ path('app_travaux') }}">Travaux</a></li>
            </ul>
            <div>
                <a href="{{ path('login') }}" class="action_btn">Connexion</a>
                <a href="{{ path('register') }}" class="action_btn" id="btn-b">Inscription</a>
            </div>
            <div class="toggle_btn">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>

        <div class="dropdown_menu close">
            <li class="li"><a href="{{ path('app_default') }}">Accueil</a></li>
            <li class="li"><a href="{{ path('app_calendar') }}">Calendrier</a></li>
            <li class="li"><a href="{{ path('app_travaux') }}">Travaux</a></li>
            <li class="li"><a href="{{ path('login') }}" class="action_btn">Connexion</a></li>
            <li class="li"><a href="{{ path('register') }}" class="action_btn" id="btn-b">Inscription</a></li>
        </div>

    </nav>
</header>
    <h1>Liste des travaux</h1>
<div class="search-container">
    <input type="text" id="search-input" placeholder="Rechercher...">
    <button onclick="performSearch()">Rechercher</button>
    <div class="icon">
        <a href="{{ path('app_calendar') }}">
            <img src="{{ asset('images/calendrier.png') }}" alt="calendrier">
        </a>
    </div>
</div>
<div class="card-container" id="card-container">
    <script src="{{ asset('assets/js/card.js') }}"></script>

</div>
    <form id="new-card-form">

        <h1>Ajouter un rendu</h1>
        <label for="new-card-name">Ressource :</label>
        <input type="text" id="new-card-name" required>

        <label for="new-card-role">Description :</label>
        <input type="text" id="new-card-role" required>

        <label for="new-card-date">Date :</label>
        <input type="text" id="new-card-date" placeholder="xx/xx/xxxx">

        <label for="new-card-date">Lien vers des ressources :</label>
        <input type="text" id="new-card-voirPlusLink" placeholder="https://lien-ressource-exemple.com">

        <label for="new-card-date">Lien vers le rendu :</label>
        <input type="text" id="new-card-rendreLink" placeholder="https://lien-rendu-exemple.com">

        <button type="button" id="add-card-btn">Ajouter</button>

    </form>
    <h1>Historique des travaux</h1>
    <h2>Vos rendus déjà envoyés</h2>
    <div class="card-container" id="historique-container">

    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/travaux.js') }}"></script>
    <script>

        window.onload = function () {
            const toggleBtn = document.querySelector('.toggle_btn');
            const toggleBtnIcon = document.querySelector('.toggle_btn i');
            const dropDownMenu = document.querySelector('.dropdown_menu');

            toggleBtn.onclick = function () {
                dropDownMenu.classList.toggle('open');
                const isOpen = dropDownMenu.classList.contains('open');

                toggleBtnIcon.classList = isOpen
                    ? 'fa-solid fa-xmark'
                    : 'fa-solid fa-bars';
            };
        };
    </script>


{% endblock %}
